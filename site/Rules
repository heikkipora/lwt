#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The string given to #compile and #route are matching patterns for
#   identifiers--not for paths. Therefore, you can’t match on extension.
#
# * The order of rules is important: for each item, only the first matching
#   rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#   “content/about.html”). To select all children, grandchildren, … of an
#   item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#   because “*” matches zero or more characters.

compile '/static/*' do
end

route '/static/*' do
  item.identifier.gsub(/htaccess/, '.htaccess').gsub(/\/static/,'').chop
end

compile '/stylesheet/' do
  filter :sass, syntax: :scss
end

compile '*' do
  if item.binary?
    # don’t filter binary items
  else
    filter :kramdown
    layout 'default'
  end
end

route '/stylesheet/' do
  '/css/lwt.css'
end

compile '/' do
  filter :kramdown
  layout 'default'
end

route '*' do
  def html_extension(i)
    # Write item with identifier /1-foo/ to /foo/index.html
    i.identifier.gsub(/\/\d+-/, "/") + 'index.html'
  end
  def route_html
    if item[:is_dir]
      # no output for "is_dir" pages
    elsif item.parent and item.parent[:is_dir] and item == item.parent.children[0]
      html_extension(item.parent)
    else
      html_extension(item)
    end
  end

  if item.binary?
    # Write item with identifier /foo/ to /foo.ext
    item.identifier.gsub(/\/\d+-/, "/").chop + '.' + item[:extension]
  else
    route_html
  end
end

layout '*', :erb
